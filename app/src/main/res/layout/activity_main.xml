<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="46dp"
        android:text="TITULO"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/timeBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232"
        tools:ignore="MissingConstraints,UnknownId"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/author"
        android:layout_width="236dp"
        android:layout_height="20dp"
        android:layout_marginStart="87dp"
        android:text="Autor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/songTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/timeBar"
        android:layout_width="318dp"
        android:layout_height="22dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="47dp"
        android:indeterminate="false"
        android:progress="30"
        app:layout_constraintBottom_toTopOf="@+id/timeDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="179dp"
        android:text="time"
        app:layout_constraintBottom_toTopOf="@+id/Pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeBar" />

    <Button
        android:id="@+id/Pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="pause"
        app:iconSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextSong"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lastSong"
        app:layout_constraintTop_toBottomOf="@+id/timeDisplay" />

    <Button
        android:id="@+id/button1"
        android:layout_width="98dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="23dp"
        android:text="something"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="98dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="23dp"
        android:text="something"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="98dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="23dp"
        android:text="something"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextSong"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="75dp"
        android:text="Next song"
        app:iconSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Pause"
        app:layout_constraintTop_toBottomOf="@+id/timeBar" />

    <Button
        android:id="@+id/lastSong"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="75dp"
        android:text="Button"
        app:iconSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Pause"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeBar" />


</androidx.constraintlayout.widget.ConstraintLayout>